@page "/army"
@inject IUnitService UnitService

<h3>My Army</h3>

<table class="table">
    @foreach (var userUnit in UnitService.MyUnits)
    {


<tr>
    <td>
        @switch (userUnit.UnitId)
        {
            case 1:<img src="Icons/rsz_swords_07_b.png"/>break;
            case 2:<img src="Icons/rsz_bow_06_b.png" />break;
            case 3:<img src="Icons/rsz_stave_07_b.png"/>break;
        }
    </td>
    <td>
        @UnitService.Units.First(unit => unit.Id == userUnit.UnitId).Title
    </td>
    <td>
        @userUnit.HitPoints HP
    </td>
        </tr>
    }
</table>

